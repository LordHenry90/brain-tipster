{
  "name": "braintipster-monorepo",
  "version": "1.0.0",
  "description": "BrainTipster - AI-powered football prediction app",
  "scripts": {
    "dev": "vite --host localhost --port 5173",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:railway",
    "build:local": "npm run build:try || npm run build:emergency",
    "build:try": "npm run build:vite && npm run build:copy",
    "build:vite": "vite build --outDir dist --emptyOutDir",
    "build:copy": "node copy-build.js",
    "build:emergency": "node manual-build.js",
    // --- MODIFICA QUESTA RIGA ---
    "build:railway": "npm run build", 
    // --- FINE MODIFICA ---
    "start": "cd backend && npm start",
    "preview": "vite preview --outDir dist",
    "postinstall": "cd backend && npm install"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  },
  "type": "module"
}